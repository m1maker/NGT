float listener_x, listener_y, listener_z, source_x, source_y, source_z;

sound s;
void main(){
source_x=0;
source_y=0;
source_z=0;
listener_x=0;
listener_y=0;
listener_z=0;
s.load("C:/Users/Ecler/Documents/VKBoss+_1.54/Music/50 Cent - P.I.M.P..mp3");
show_window("Positioner");
update_window_freq=0; // We will interrupt characters reading. We need fast event handling.
s.play_looped();
s.set_fx("reverb");
s.set_reverb_parameters(1, 0.5, 0.3, 0, 0);
s.set_hrtf(true);
timer t;
screen_reader::speak(s.file_path);
while(true){
wait_event();
if(get_input()!="")screen_reader::stop_speech(); // Avoid character reading.
s.set_position(listener_x, listener_y, listener_z, source_x, source_y, source_z, 0);
if(key_repeat(KEY_RIGHT))
listener_x+=1;
if(key_repeat(KEY_LEFT))
listener_x-=1;
if(key_repeat(KEY_UP))
listener_y+=1;
if(key_repeat(KEY_DOWN))
listener_y-=1;
if(key_repeat(KEY_PAGEDOWN))
listener_z-=1;
if(key_repeat(KEY_PAGEUP))
listener_z+=1;
if(key_repeat(KEY_F1)){
s.set_hrtf(false);
}
if(key_repeat(KEY_F2)){
s.set_hrtf(true);
}
if(key_repeat(KEY_F3)){
s.delete_fx("reverb");
}
if(key_repeat(KEY_F4)){
s.set_fx("reverb");
s.set_reverb_parameters(1, 0.5, 0.3, 0, 0);

}
if(key_repeat(KEY_1))
s.seek(s.position - 1000);
if(key_repeat(KEY_2))
s.seek(s.position + 1000);
if(key_repeat(KEY_3))
s.pitch=s.pitch-5;
if(key_repeat(KEY_4))
s.pitch=s.pitch+5;

if(key_pressed(KEY_SPACE)){
if(!s.paused)s.pause();
else s.play_looped();
}
}
}
